<h1>Send an invite</h1>

<%= form_tag(big_beta_invitations_create_path()) do %>
  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :message %><br />
    <%= text_area_tag :message, "", {:rows => 8, :cols => 40} %>
  </div>

  <div>
    <%= submit_tag :send %>
  </div>
<% end %>
